<script src="https://cdn.tiny.cloud/1/6xo69yo5u1wc5a0n3wobc897ey95w3bap7gyvix9iqdej71k/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea',
        mode: "textareas",
    });
</script>
<script>
    $('#nav_list a.active').removeClass('active');
</script>
<div>
    <button class="btn btn-primary" type="submit" style="text-align: right">Save changes</button>
</div>
<div class="card mb-4">
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="small mb-1" for="inputCourName"><strong style="font-size: 20px">Course name</strong></label>
                <input class="form-control" id="inputCourName" type="text" placeholder="Enter your CourName"
                       name="CourName">
            </div>
            <h3>Description</h3>
            <div class="accordion">
                <div class="accordion-item">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                            aria-expanded="true" aria-controls="collapseOne">
                        Full description
                    </button>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                         data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <textarea id="mytextarea" class="desc" name="FullDes"></textarea>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapsetwo"
                            aria-expanded="true" aria-controls="collapsetwo">
                        Small description
                    </button>
                    <div id="collapsetwo" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                         data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <textarea id="mytextarea2" name="TinyDes"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div style="padding-top: 10px; font-size: large ">
                <label class="small mb-1" for="sel1"><strong style="font-size: 20px">Category for course</strong></label>
                <select id="sel1" name="CatID" style="width: 100%; height: 30px">
                    <option value="">none</option>
                    {{#each categories}}
                        <option value={{CatID}} name={{CatName}}>{{CatName}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label class="small mb-1" for="inputPrice"><strong style="font-size: 20px">Price</strong></label>
                <input class="form-control" id="inputPrice" type="number" placeholder="{{this.courses.Price}}"
                       name="Price" value="{{this.courses.Price}}">
            </div>
            <div style="padding-top: 10px">
                <button id="submitadd" class="btn btn-primary" type="submit">Add new course</button>
            </div>
        </form>
    </div>
</div>

<script>
    $('#submitadd').click(function(){
        if($('#inputCourName').val().trim() == ''){
            alert("Empty for Course name")
            return false;
        } else if($('#mytextarea_ifr').contents().find('body').text().trim().length == 0){
            alert("Empty for Description")
            return false;
        } else if($('#mytextarea2_ifr').contents().find('body').text().trim().length == 0){
            alert("Empty for Description")
            return false;
        } else if( $('#inputPrice').val().trim() == ''){
            alert("Empty for Price")
            return false;
        } else if($('#sel1').val() == ""){
            alert("Empty for Category")
            return false;
        }
    });
</script>